{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2020",
		"module": "esnext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"types": ["node", "jwt-decode", "axios"],
		"esModuleInterop": true,
		"composite": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"strict": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.css",
		"../admin/src/features/attributes/AttributeHeader.tsx",
		"../admin/src/features/attributes/AttributeSidebarLayout.tsx",
		"../admin/src/features/attributes/CardAttributeValue.tsx",
		"../admin/src/features/attributes/CreateAttributePanel.tsx",
		"../admin/src/features/attributes/CreateAttributeValue.tsx",
		"../admin/src/features/attributes/index.ts"
	],
	"exclude": ["node_modules", "dist"]
}
