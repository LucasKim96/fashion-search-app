{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"],
			"@shared/*": ["../../shared/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"../../shared/**/*.ts",
		"../../shared/**/*.tsx",
		".next/dev/types/**/*.ts",
		"../shared/features/shop/shop.api.ts",
		"../shared/features/shop/shop.types.ts",
		"../shared/features/order/useShopOrders.hook.ts"
	],
	"exclude": ["node_modules"]
}
