{
  "name": "fashion-search-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "server",
    "client",
    "admin",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:admin\"",
    "dev:server": "npm --workspace server run dev",
    "dev:client": "npm --workspace client run dev",
    "dev:admin": "npm --workspace admin run dev",
    "build": "npm run build:server && npm run build:client && npm run build:admin",
    "build:server": "npm --workspace server run build",
    "build:client": "npm --workspace client run build",
    "build:admin": "npm --workspace admin run build",
    "start": "npm --workspace server run start"
  },
  "devDependencies": {
    "@types/jwt-decode": "^2.2.1",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "eslint-config-next": "^16.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.552.0",
    "moment-timezone": "^0.6.0",
    "multer": "^2.0.2",
    "next": "^16.0.1",
    "node-cron": "^4.2.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "readline-sync": "^1.4.10"
  }
}
